{
  "name": "@unification-com/xfund-router",
  "version": "0.3.1",
  "description": "xFUND Router & Data Consumer Solidity Smart Contracts",
  "main": "index.js",
  "scripts": {
    "build": "truffle compile",
    "test": "mocha --exit --recursive",
    "coverage": "node scripts/coverage.js",
    "flatten": "./node_modules/.bin/poa-solidity-flattener contracts/Router.sol",
    "prepublishOnly": "truffle compile",
    "docs:api:clean": "rimraf docs/api",
    "docs:api:postclean": "rimraf docs/api/Migrations.md && rimraf docs/api/interfaces",
    "docs:api:build": "yarn run docs:api:clean && solidity-docgen -t ./docs/templates -o ./docs/api -e contracts/mocks && yarn run docs:api:postclean",
    "docs:compile": "rimraf docs/.vuepress/dist && yarn run docs:api:build && vuepress build docs",
    "docs:dev": "vuepress dev docs",
    "info:abi:dev": "node scripts/export_abi.js",
    "info:abi:tn": "node scripts/export_abi.js -n rinkeby",
    "info:abi:mn": "node scripts/export_abi.js -n mainnet",
    "info:addr:dev": "node scripts/export_abi.js -w addr",
    "info:addr:tn": "node scripts/export_abi.js -w addr -n rinkeby",
    "info:addr:mn": "node scripts/export_abi.js -w addr -n mainnet",
    "info:dev": "yarn run info:abi:dev && yarn run info:addr:dev",
    "info:tn": "yarn run info:abi:tn && yarn run info:addr:tn",
    "info:mn": "yarn run info:abi:mn && yarn run info:addr:mn"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unification-com/xfund-router.git"
  },
  "author": "Codegnosis",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/unification-com/xfund-router/issues"
  },
  "homepage": "https://github.com/unification-com/xfund-router#readme",
  "dependencies": {
    "@openzeppelin/contracts": "^3.3.0",
    "arg": "^5.0.0",
    "bn.js": "^5.1.3",
    "isomorphic-unfetch": "^3.1.0",
    "pg": "^8.5.1",
    "sequelize": "^6.4.0",
    "sqlite3": "^5.0.1"
  },
  "devDependencies": {
    "@openzeppelin/test-environment": "^0.1.8",
    "@openzeppelin/test-helpers": "^0.5.9",
    "@openzeppelin/truffle-upgrades": "^1.3.0",
    "@poanet/solidity-flattener": "^3.0.6",
    "@truffle/hdwallet-provider": "^1.2.0",
    "chai": "^4.2.0",
    "chai-bn": "^0.2.1",
    "dotenv": "^8.2.0",
    "ganache-cli": "^6.12.1",
    "mocha": "^8.2.1",
    "rimraf": "^3.0.2",
    "sequelize-cli": "^6.2.0",
    "solidity-coverage": "^0.7.14",
    "solidity-docgen": "^0.5.11",
    "truffle": "^5.1.57",
    "truffle-plugin-verify": "^0.5.2",
    "vuepress": "^1.7.1",
    "web3": "^1.3.0"
  },
  "resolutions": {
    "**/**/elliptic": "^6.5.3",
    "**/**/lodash": "^4.17.19"
  },
  "files": [
    "/contracts/**/*.sol",
    "/build/contracts/*.json",
    "/docs/**/*.md",
    "!/contracts/mocks",
    "!/contracts/Migrations.sol",
    "!/contracts/Router.sol",
    "!/build/contracts/Mock*.json",
    "!/build/contracts/Migrations.json",
    "!/build/contracts/Router.json",
    "!/build/contracts/AccessControl.json"
  ]
}
